@font-face
  font-family roboto-slab
  src url("/roboto-slab.ttf") format("truetype")

body
  background-color #eee
  
  h1, h3, p
    font normal 26px/1em roboto-slab
    letter-spacing -0.015em
    color #4d4d4d
    text-transform none
    text-decoration none
  
  .container
    width 1020px
    background-color #fff
    margin-top 20px
    margin-left auto
    margin-right auto
    
    .banner
      float left
      background-image url("/banner.jpg")
      width 100%
      height 191px
      
      h1
        margin-top 65px
        margin-left 218px
        margin-right 218px
        margin-bottom 0
  
  .posts
    padding 20px
    padding-top 175px
  
    .post
      margin-top 40px
      
      h3
        margin-bottom 0
      
      p
        font-size 20px
